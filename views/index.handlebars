<div class="container">
    <div class="jumbotron">
        <h1>Eat the Burger!</h1><hr>
    </div>
</div> 
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Burgers to Eat</h2><br>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="row">
                    <p>{{this.id}}. {{this.burger_name}}</p>
                    <form method="POST" action="/burgers/update?_method=PUT" class="devour">
                        <input type="hidden" name="burger_id" value={{this.id}}><br>
                        <button type="submit" class="btn btn-default">Devour It</button>
                    </form>
                </div>
            </ul>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-4">
            <img src="./images/burgerpic.jpg" class="burger">
            <form action="/burgers/insert" method="POST">
                <input type="text" name="burger_name" class="form-control" id="enter_burger" value="">
                <button type="submit" class="btn btn-primary" id="enter_button">Add Burger!</button>
            </form>
        </div>
        <div class="col-md-4">
            <h2>Burgers You've Eaten</h2><br>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

